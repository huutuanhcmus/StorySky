<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin/home.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    
    <decorator name="user" page="user/home.jsp">
        <pattern>/*</pattern>
    </decorator>
    
    <decorator name="login" page="user/home.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>
</decorators>